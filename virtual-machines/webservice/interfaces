# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface, used for the administrative vagrant overlay access
auto eth0
iface eth0 inet dhcp
        post-up route del default eth0

# The DMZ interface, InfSec_DMZ
auto eth1
iface eth1 inet static
        address 172.16.0.4
        netmask 255.240.0.0
        ### Ubuntu Linux add persistent route command ###
        post-up route add default gw 172.16.0.1 eth1
        pre-down route del default gw 172.16.0.1 eth1